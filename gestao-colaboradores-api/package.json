{
  "name": "gestao-colaboradores-api",
  "version": "1.0.0",
  "description": "API para gestão de colaboradores",
  "main": "server.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build":  "node server.js",
    "vercel-build":"npm install && npm run build",
    "build:dev": "npm run test && npm run clean && echo '✅ Build de desenvolvimento concluído!'",
    "clean": "if (Test-Path coverage) { Remove-Item -Recurse -Force coverage } && echo '✅ Arquivos de cobertura removidos'",
    "test": "jest --verbose --coverage --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:basic": "jest tests/basic.test.js --verbose",
    "test:api": "jest tests/api.test.js --verbose",
    "test:model": "jest tests/model.test.js --verbose"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3"
  },
  "keywords": ["api", "colaboradores", "gestão", "nodejs", "express"],
  "author": "Daniel Eloy",
  "license": "MIT"
}